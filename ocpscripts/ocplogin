#!/bin/bash

selection_list=$(find /vms/clusters/ -mindepth 1 -maxdepth 1 -type d -name '*-*' \
  ! -name 'backup-20230903' \
  ! -name '*-files' \
  ! -name 'quay-*' \
  -exec basename {} \; | while read -r dir; do
    vmwarenotes=$(jq -r '.vmwarenotes' "/vms/clusters/$dir/$dir.json" 2>/dev/null || echo "No notes")
    echo "$dir / $vmwarenotes"
  done)


if [ -z "$selection_list" ]; then
  tmux display-message -d 5000 "No clusters found"
  exit 0
fi

selected_entry=$(echo "$selection_list" | fzf-tmux --header=$'Select the clustername to login:\n\n' --layout=reverse -p "38%,50%" --delimiter=' / ' --with-nth=1,2 | awk -F ' / ' '{print $1}')

 tmux send-keys "oc login https://api.$selected_entry.chiaret.to:6443 -u kubeadmin -p $(cat /vms/clusters/$selected_entry/auth/kubeadmin-password) --insecure-skip-tls-verify" C-m
