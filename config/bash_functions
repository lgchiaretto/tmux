ssh-sync() {
    HOSTS=$@
    if [ -z "$HOSTS" ]; then
       echo -n "Hosts separated by spaces [ENTER]: "
       read HOSTS
    fi

    local hosts=( $HOSTS )

    tmux new-window ssh ${hosts[0]}

    # We are openning multiple windows with the same machine
    re='^[0-9]+$'

    if [[ ${hosts[1]} =~ $re ]] ; then
        i=1
        while [ $i -lt ${hosts[1]} ]
        do
            tmux split-window -h  ssh ${hosts[0]}
            tmux select-layout tiled > /dev/null
            let "i++"
        done
        tmux select-pane -t 0
        tmux set-window-option synchronize-panes on > /dev/null
    else
        unset hosts[0];
        # We are openning multiple windows in different machine
        for i in "${hosts[@]}"; do
            tmux split-window -h  ssh $i
            tmux select-layout tiled > /dev/null
        done
        tmux select-pane -t 0
        tmux set-window-option synchronize-panes on > /dev/null
    fi
}

tmux-multi-pane() {
    HOSTS=$@
    local hosts=( $HOSTS )

    tmux new-window
    i=1
    while [ $i -lt ${hosts[0]} ]
    do
        tmux split-window -h
        tmux select-layout tiled > /dev/null
        let "i++"
    done
    tmux select-pane -t 0
    #tmux set-window-option synchronize-panes on > /dev/null
}

tmux-multi-window() {
    i=0
    while [ $i -lt $@ ]
    do
        command tmux new-window
        let "i++"
    done
}

ssh-multi() {
    unset hosts[0];
    HOSTS=$@
    if [ -z "$HOSTS" ]; then
       echo -n "Hosts separated by spaces [ENTER]: "
       read HOSTS
    fi

    local hosts=( $HOSTS )

    # We are openning multiple windows with the same machine
    re='^[0-9]+$'

    if [[ ${hosts[1]} =~ $re ]] ; then
        i=0
        while [ $i -lt ${hosts[1]} ]
        do
            #command tmux new-window -n "${hosts[0]}" "ssh ${hosts[0]}"
            command tmux new-window ssh ${hosts[0]}
            let "i++"
        done
    else
        # We are openning multiple windows in different machine
        for i in "${hosts[@]}"; do
            #command tmux new-window -n $i "ssh $i"
            command tmux new-window ssh $i
        done
    fi
}

vim-multi() {
    unset files[0];
    FILES=$@
    if [ -z "$FILES" ]; then
       echo -n "Files separated by spaces [ENTER]: "
       read FILES
    fi

    local files=( $FILES )

    for i in "${files[@]}"; do
        command tmux new-window vim $i
    done
}

vim-multi-pane() {
    FILES=$@
    if [ -z "$FILES" ]; then
       echo -n "Files separated by spaces [ENTER]: "
       read FILES
    fi

    local files=( $FILES )

    tmux new-window vim ${files[0]}

    # We are openning multiple windows with the same machine
    re='^[0-9]+$'

    unset files[0];
    for i in "${files[@]}"; do
        tmux split-window -v vim $i
        tmux select-layout tiled > /dev/null
    done
    tmux select-pane -t 0
}
